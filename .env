

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=fraud_detection
MONGODB_COLLECTION_CUSTOMERS=customer_memory
MONGODB_COLLECTION_CASES=fraud_cases
MONGODB_COLLECTION_SIGNATURES=fraud_signatures

# Vector Search Configuration
VECTOR_INDEX_NAME=fraud_signature_vector_index
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# Fraud Detection Configuration
SIMILARITY_THRESHOLD=0.8
DUPLICATE_DETECTION_HOURS=24
FRAUD_MODEL_PATH=models/fraud_classifier.joblib

# Agent Configuration
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO
